{
  "user": [
    {
      "type": "allow",
      "actions": [
        "user:getInformation",
        "user:getTasks",
        "user:deleteTask",
        "user:getTask",
        "user:addTask",
        "user:updateTask",
        "user:updateAssignment"
      ],
      "resources": ["user:*", "task:*"]
    },
    {
      "type": "deny",
      "actions": [
        "task:getTasks",
        "task:deleteTask",
        "task:getTask",
        "task:addTask",
        "task:updateTask"
      ],
      "resources": ["task:*"]
    }
  ]
}
